            android:name="com.example.androidlayout.MetroActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.searchrss.MetroItemList" >
        </activity>
        <activity android:name="com.example.searchrss.SingleItemView" >
        </activity>
        <activity android:name="com.example.searchrss.SearchActivity" >
        </activity>
    </application>

</manifest>