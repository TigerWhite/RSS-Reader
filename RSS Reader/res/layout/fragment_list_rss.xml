<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="zend.layout.ListRssActivity$ListRssFragment" >

    <RelativeLayout
        android:id="@+id/listRss_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/default_background"
        android:paddingBottom="8dp"
        android:paddingTop="8dp" >

        <LinearLayout
            android:id="@+id/listRss_btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_btn_back"
            android:layout_alignParentLeft="true"
            android:clickable="true"
            android:orientation="horizontal"
            android:padding="0dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/img_description"
                android:src="@drawable/act_back" />

            <ImageView
                android:id="@+id/listRss_img_logo"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:contentDescription="@string/img_description"
                android:src="@drawable/logo" />
        </LinearLayout>

        <TextView
            android:id="@+id/listRss_tv_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/hello_world"
            android:textColor="@color/default_text_color" />

        <ImageButton
            android:id="@+id/listRss_btn_setting"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginLeft="5dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/setting"
            android:background="@drawable/custom_btn_setting" />

    </RelativeLayout>

    <ListView
        android:id="@+id/listRss_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B3eee9e9"
        android:divider="#B3eee9e9"
        android:dividerHeight="20dp" 
        android:visibility="visible">
    </ListView>

</LinearLayout>